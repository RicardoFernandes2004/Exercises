# calculo de dia em segundos
Inicio
    // Entrada de dados
    Escrever "Digite o dia: "
    Ler dia
    Escrever "Digite a hora: "
    Ler hora
    Escrever "Digite o minuto: "
    Ler minuto
    Escrever "Digite os segundos: "
    Ler segundos
    
    // Conversão para segundos
    dia_em_sec = dia * 86400
    hora_em_sec = hora * 3600
    minuto_em_sec = minuto * 60
    
    // Calculando o total de segundos
    total = dia_em_sec + hora_em_sec + minuto_em_sec + segundos
    
    // Exibindo os resultados
    Escrever "O seu dia em segundos é ", dia_em_sec
    Escrever "As suas horas em segundos são ", hora_em_sec
    Escrever "Os seus minutos em segundos são ", minuto_em_sec
    Escrever "Os seus segundos inseridos foram ", segundos
    Escrever "O total do seu dia em segundos é de ", total
Fim

# calculo de desconto 
Inicio
    // Entrada de dados
    Escrever "Insira o preço da mercadoria: "
    Ler preco
    Escrever "Insira o percentual de desconto: "
    Ler desc
    
    // Cálculos
    valor_final = preco - (preco * (desc / 100))
    economia = preco * (desc / 100)
    
    // Exibindo os resultados
    Escrever "O preço a ser pago é de ", valor_final, " reais e o desconto foi de ", economia, " reais"
Fim


# calculo de tempo de viagem
Inicio
    // Entrada de dados
    Escrever "Qual é a distância até o destino em quilômetros? "
    Ler distancia
    Escrever "Qual é a velocidade média esperada em quilômetros por hora? "
    Ler vm_esperada
    
    // Cálculo da duração da viagem
    duracao = distancia / vm_esperada
    
    // Exibindo a duração da viagem
    Escrever "A duração da viagem será de ", duracao, " horas"
Fim
